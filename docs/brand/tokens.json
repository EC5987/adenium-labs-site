  "shadows": {
    "shadow": [
      { "x": 0, "y": 10, "blur": 24, "spread": 0, "color": "rgba(0,0,0,0.12)" },
      { "x": 0, "y": 2,  "blur": 6,  "spread": 0, "color": "rgba(0,0,0,0.08)" }
    ],
    "soft": [
      { "x": 0, "y": 6,  "blur": 16, "spread": 0, "color": "rgba(0,0,0,0.10)" },
      { "x": 0, "y": 1,  "blur": 3,  "spread": 0, "color": "rgba(0,0,0,0.06)" }
    ]
  },
  "typography": {
    "family": "ChillaxVariable",
    "weights": { "title": 400, "body": 400, "cta": 500 }
  }
}

