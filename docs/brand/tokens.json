{
  "meta": {
    "source": "tokens.css",
    "version": 1,
    "notes": "Machine-readable design tokens for Sound Asleep / Adenium Labs"
  },
  "colors": {
    "teal": "#005579",
    "blush": "#D6A3A9",
    "cream": "#FFF6C3",
    "charcoal": "#1E1E1E",
    "slate": "#6B7C8F",
    "offwhite": "#F7F8F9",
    "dark": {
      "text": "#f2f6f7",
      "muted": "#b9c7d1",
      "cardGradient": {
        "type": "linear",
        "angle": 180,
        "stops": [
          { "color": "#032f3e", "pos": 0 },
          { "color": "#0b4e67", "pos": 100 }
        ]
      }
    }
  },
  "backgrounds": {
    "light": [
      {
        "type": "radial",
        "shape": "circle",
        "size": { "x": 120, "y": 120 },
        "at": { "xPct": 78, "yPct": 20 },
        "stops": [
          { "color": "#FFF6C3", "pos": 0 },
          { "color": "rgba(255,246,195,0)", "pos": 60 }
        ]
      },
      {
        "type": "linear",
        "angle": 180,
        "stops": [
          { "color": "#0b5a78", "pos": 0 },
          { "color": "#6b7c8f", "pos": 55 },
          { "color": "#d6a3a9", "pos": 100 }
        ]
      }
    ],
    "dark": [
      {
        "type": "radial",
        "shape": "circle",
        "size": { "x": 140, "y": 140 },
        "at": { "xPct": 20, "yPct": 28 },
        "stops": [
          { "color": "rgba(255,246,195,0.25)", "pos": 0 },
          { "color": "rgba(255,246,195,0)", "pos": 55 }
        ]
      },
      {
        "type": "linear",
        "angle": 180,
        "stops": [
          { "color": "#032f3e", "pos": 0 },
          { "color": "#0b4e67", "pos": 55 },
          { "color": "#415362", "pos": 100 }
        ]
      }
    ]
  },
  "controls": {
    "light": {
      "toggle": {
        "trackOn": { "type": "linear", "angle": 135, "stops": [
          { "color": "#0b6a8e", "pos": 0 },
          { "color": "#005579", "pos": 100 }
        ] },
        "trackOff": "#d7dee6",
        "knob": "#F7F8F9"
      },
      "slider": {
        "track": "#d9dfe6",
        "fill": { "type": "linear", "angle": 90, "stops": [
          { "color": "#0b6a8e", "pos": 0 },
          { "color": "#005579", "pos": 100 }
        ] },
        "thumb": "#F7F8F9"
      }
    },
    "dark": {
      "text": "#f2f6f7",
      "muted": "#b9c7d1",
      "card": { "type": "linear", "angle": 180, "stops": [
        { "color": "#032f3e", "pos": 0 },
        { "color": "#0b4e67", "pos": 100 }
      ] },
      "toggle": {
        "trackOff": "#284b5a",
        "trackOn": { "type": "linear", "angle": 135, "stops": [
          { "color": "#12799f", "pos": 0 },
          { "color": "#0a4e66", "pos": 100 }
        ] },
        "knob": "#F7F8F9"
      },
      "slider": {
        "track": "#274b5a",
        "fill": { "type": "linear", "angle": 90, "stops": [
          { "color": "#12799f", "pos": 0 },
          { "color": "#0a4e66", "pos": 100 }
        ] },
        "thumb": "#F7F8F9"
      }
    }
  },
  "radii": {
    "md": 16,
    "sm": 10,
    "pill": 999
